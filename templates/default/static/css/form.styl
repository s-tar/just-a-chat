/* ---------------------------------- IMAGE LOADER ---------------------------------------- */
.image-loader
  text-align: center
  cursor: pointer
  position: relative
  width: 100%
  height: 100%
  float: left
  overflow: hidden
  border: 1px dashed #cccccc
  padding: 5px
  rounded(5px)
  .source-wrapper
    width: 100%
    height:100%
    overflow: hidden
    position: absolute
  .source
    rounded(3px)
    display: none
    overflow: hidden
    background-size: cover;
    background-repeat: no-repeat
    background-position: center
    width: 100%
    height: 100%
    z-index:1
  &.loading
    .source
      background-image: none !important
    .no-photo
      display: none
    .loading
      display: block
  &.has-image
    border: 1px solid #cccccc
    .source
      display: block
    .loading, .no-photo
      display: none
  .no-photo, .loading
    font-size: 100px
    color: #cccccc
    position: absolute;
    margin: -50px;
    top: 50%;
    left: 50%;
  .loading
    display:  none
  input[type=file]
    cursor: pointer
    position: absolute
    left: -50px
    top: -50px
    font-size: 0px
    width: 150%
    height: 150%
    opacity: 0
    z-index: 2
