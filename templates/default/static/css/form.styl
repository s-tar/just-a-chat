.image-multiloader
  width: 100%
  .item
    text-align: center
    cursor: default
    position: relative
    width: 150px
    height: 100px
    float: left
    overflow: hidden
    border: 1px solid #cccccc
    padding: 5px
    margin: 5px
    background-color: #ffffff
    rounded(5px)
    .source-wrapper
      cursor: pointer
      display: none
      width: 100%
      height:100%
      overflow: hidden
      position: absolute
    .source
      rounded(3px)
      overflow: hidden
      background-size: cover;
      background-repeat: no-repeat
      background-position: center
      width: 100%
      height: 100%
      z-index:1
    &.loading
      .source
        background-image: none !important
      .no-photo
        display: none
      .loading
        display: block
    &.new
      border: 1px dashed #cccccc
      .loading
        display: none
      .no-photo, .source-wrapper
        display: block
    &.invisible > *:not(.buttons)
      opacity: 0.2
    &.invisible .button .visible
      display: block
    .button .invisible
      display: none
