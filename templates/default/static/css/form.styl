.st-dropdown
  z-index: 10
  float: left
  cursor: pointer
  outline: none
  background-color: #ffffff
  position: relative
  &.no-dropdown .st-dropdown-current .fa
    color: #eeeeee
  &.loading .st-dropdown-current
    .loading
      display: inline-block
    .text
      display: none
  &.opened
      .st-dropdown-current
        border-radius(3px, 3px, 0px, 0px)
        border-bottom-style: dashed
  .st-dropdown-current
    padding: 10px
    white-space: nowrap
    border: 1px solid #eee
    border-radius(3px, 3px, 3px, 3px)
    .fa.arrow
      position: absolute
      right: 10px
      top: 13px
    .loading
      display: none
      height: 7px
      width: 32px
      background: url('/static/img/loading_line.gif') no-repeat left center;
  .st-dropdown-list
    float: left
    border: 1px solid #eee
    border-top: none
    list-style: none
    background: #ffffff
    max-height: 138px
    overflow: hidden
    border-radius(0px, 0px, 3px, 3px)
    .item
      padding: 10px
      padding-right: 25px
      white-space: nowrap
      &:hover
        background-color: #779ECB
        color: #ffffff
    .selected
      display: none

.st-scroll
  overflow: hidden
  &.hide-scrollbar .st-scroll-scrollbar
    display: none
  .st-scroll-content-wrapper
    width: 100%
    height: 100%
    overflow: hidden
    .st-scroll-content
      float: left;
  .st-scroll-scrollbar
    position: absolute
    top: 0px
    right: 0px
    height: 100%
    padding: 3px
    background-color: #ffffff
    .st-scroll-track
      position: relative
      width: 8px
      height: 100%
      background-color: #eeeeee
      border-radius(5px, 5px, 5px, 5px)
      overflow: hidden
      .st-scroll-thumb
        width: 100%
        position: absolute
        min-height: 8px
        background-color: #779ECB
        border-radius(5px, 5px, 5px, 5px)